<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<link rel="stylesheet" href="/css/style-productsList.css" >
<body>
<%- include('partials/header') %>


<!-- todos los productos -->
<div class="title">
    <h2 class="products-title">Todos los productos</h2>
</div>
<div class="products-wrapper">
    <div class="row">
    <% for(let i = 0; i < products.length; i++) { %>
        <div class="cajaMadre">
            <section class="product-box">
                <a href="/products/detail/<%= products[i].id %>">
                    <figure class="product-box_image">
                        <img src="/images/imageDefaul.jpg" alt="imagen de producto">
                    </figure>
                    <article class="product-box_data">
                        <h2>$ <%= products[i].precio %> </h2>
                        <span> <%= products[i].condicion %></span>
                        <p> <%= products[i].producto %></p>
                        <i class="fas fa-truck"></i>
                    </article>
                </a>
            </section>
        </div>
    <% } %>
    
    </div>
</div>
<!-- /todos los productos -->

</body>
</html>