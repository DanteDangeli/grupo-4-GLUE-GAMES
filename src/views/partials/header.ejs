
    <link rel="stylesheet" href="/css/headerStyle.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;700&display=swap">
    <script src="https://kit.fontawesome.com/cd8fa35da4.js" crossorigin="anonymous"></script>


<header>
    <div class="logo">
        <a href="/"><img src="/images/logo-gluegames.png" class="logo" alt="logo GlueGames"></a>
     </div>
     <div class="search">
        <i class="fas fa-search"></i>
     </div>
     <nav class="nav-mobile">
     <div class="burguer-menu">
        <i class="fas fa-bars"></i>
     </div>
     <div class="cart">
        <i class="fas fa-shopping-cart"></i>
     </div>
    </nav>
     <nav class="nav-desktop">
      <div class="perfil-usuario">
         <% if (locals.isLogged) { %>
                <a href="/user/profile">
                    <img src="/images/users/<%= locals.userLogged.fotoPerfil %>">
                    <a href="/user/profile"><%= locals.userLogged.nombre %> </a>
                    <i class="fas fa-chevron-down"></i>
                    </a>
            <% } else { %>
         <img src="/images/users/1637980580577-user.jpg">
         <a href="/user/profile">Visitante</a>
         <i class="fas fa-chevron-down"></i>
         <% } %>
      </div>
      <div class="compras">
         <p >Mis compras</p>
         <i class="fas fa-chevron-down"></i>
      </div>
      <div class="favoritos">
        
         <i class="far fa-heart"></i>
      </div>
      <div class="notificaciones">
         <i class="far fa-bell"></i>
      </div>
      <div class="cart">
         <i class="fas fa-shopping-cart"></i>
      </div>
     </nav>
</header>