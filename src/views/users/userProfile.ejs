<!DOCTYPE html>
<html lang="es">

    <%-include('../partials/head')%>
    <link rel="stylesheet" href="/css/products.css">
<body>
   
    <%-include('../partials/header')%>
    <br>  </br>
    <br>  </br>
    <br>  </br>
     
      <div class="hero">
          <figure class="hero_picture">
              <img src="/images/imageDefaul.jpg"
              class="hero_img">
          </figure>

          <div class="hero_texts">
              <h1 class="hero_title"> <%= product.producto %></h1>
              <P class="hero_paragraph">VALORACION CON ESTRELLAS</P>
              <P class="hero_paragraph">PRECIO $ <%= product.precio %></P>
              <P class="hero_paragraph"><%= product.condicion %></P>
              <P><a href="#" class="hero_cta">AGREGAR AL CARRITO</a></P>
              <br>  </br>
              <a href="/admin/products/edit/<%= product.id %>" class="action-button edit">EDITAR PRODUCTO</a>
              <br>
              <form action="/admin/products/delete/<%= product.id %>" method="POST" style="display: inline-flex">
                  <button type="submit" class="action-button delete">ELIMINAR</button>
              </form>
              <P><a href="#" class="hero_cta2">Políticas de reembolso</a></P>
              <br>  </br>
              <P><a href="#" class="hero_cta2">Promociones de envío gratis</a></P>
          </div>
      </div>


      <div class="containerdetalle">

          <div class="detalle-info">
              <h1>Detalle del Producto</h1>
              <p class="detalle-txt"> <%= product.descripcion %> </p>
          </div>
      </div>


  </main>
  <%-include('../partials/footer')%>

</body>
</html>